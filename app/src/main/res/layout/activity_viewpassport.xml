<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passportActivityToolbarLayout">
        <include layout="@layout/toolbar"></include>

    </RelativeLayout>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityPassportCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/passportActivityToolbarLayout"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="#919191"
    android:layout_marginBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/passportActivityFullNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/passportActivityFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Fullname"
                    android:textColor="#fff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/passportActivityAddressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passportActivityFullNameLayout"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/passportActivityAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Address"
                    android:textColor="#fff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/passportActivityTelephoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passportActivityAddressLayout"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/passportActivityTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Telephone number"
                    android:textColor="#fff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/passportActivityBirthDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passportActivityTelephoneLayout"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/passportActivityBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birth date"
                    android:textSize="20dp"
                    android:inputType="text"
                    android:textColor="#fff" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/passportActivityButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passportActivityBirthDateLayout"
                android:layout_margin="15dp">

                <Button
                    android:id="@+id/passportActivityButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call emergency"
                    android:inputType="text"
                    android:background="@layout/login_button_layout"
                    android:textColor="#fff" />
            </RelativeLayout>
        </RelativeLayout>

</android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>